<UserControl x:Class="MinFin7.MNT.View.Main.BrandTitleUserControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="152">
  <Grid Height="40" Width="152" >
    <Image Source="/MinFin7.MNT.View;component/Assets/Money.ico" Height="40" Width="152" HorizontalAlignment="Left" Margin="10 0"/>
    <TextBlock Text="Min " FontSize="16" FontFamily="Orbitron" FontWeight="SemiBold" Foreground="{DynamicResource LogoTextBrush}" Margin="62,-10,10,0" VerticalAlignment="Top" >
      <TextBlock.Effect>
        <DropShadowEffect ShadowDepth="2" BlurRadius="12" Color="{DynamicResource LogoTextColor}" />
      </TextBlock.Effect>
    </TextBlock>
    <TextBlock Text="Fin " FontSize="16" FontFamily="Orbitron" FontWeight="SemiBold" Foreground="{DynamicResource LogoTextBrush}" Margin="72,8,0,0" VerticalAlignment="Top">
      <TextBlock.Effect>
        <DropShadowEffect ShadowDepth="2" BlurRadius="12" Color="{DynamicResource LogoTextColor}" />
      </TextBlock.Effect>
    </TextBlock>
    <TextBlock Text="Tax " FontSize="16" FontFamily="Orbitron" FontWeight="SemiBold" Foreground="{DynamicResource LogoTextBrush}" Margin="82,0,0,-5" VerticalAlignment="Bottom" >
      <TextBlock.Effect>
        <DropShadowEffect ShadowDepth="2" BlurRadius="12" Color="{DynamicResource LogoTextColor}" />
      </TextBlock.Effect>
    </TextBlock>
  </Grid>
</UserControl>